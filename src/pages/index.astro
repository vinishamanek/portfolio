---
import BaseLayout from '../layouts/base.astro';
import Trinkets from '../components/trinkets.astro';
import AboutContent from '../components/about.astro';
import ProjectsContent from '../components/projects.astro';
import InterestsContent from '../components/etc.astro';
---

<BaseLayout>
  <main>
    <Trinkets />
    
    <div id="content-sections">
      <section id="about" class="scroll-section">
        <div class="section-content-wrapper">
          <h2 class="section-title">about</h2>
          <AboutContent />
        </div>
      </section>

      <section id="projects" class="scroll-section">
        <div class="section-content-wrapper">
          <h2 class="section-title">software</h2>
          <ProjectsContent />
        </div>
      </section>

      <section id="interests" class="scroll-section">
        <div class="section-content-wrapper">
          <h2 class="section-title">etc</h2>
          <InterestsContent />
        </div>
      </section>
    </div>
  </main>
</BaseLayout>

<style>
  main {
    width: 100%;
    padding: 0;
    margin: 0;
  }

  #content-sections {
    opacity: 1;
    pointer-events: auto;
    position: relative;
    z-index: 10;
  }

  .scroll-section {
    min-height: 50vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 2.25rem 1.5rem;
    scroll-margin-top: 0;
    background: #f2f3f4;
    opacity: 1;
    transform: translateY(0);
  }

  .section-content-wrapper {
    max-width: 800px;
    width: 100%;
  }

  .section-title {
    font-size: 2.1rem;
    font-weight: bold;
    margin: 0 0 1.25rem 0;
    color: #1e293b;
    opacity: 1;
    transform: translateX(0);
  }

  /* Alignment per section */
  #about .section-content-wrapper { text-align: left; }
  #projects .section-content-wrapper { text-align: left; }
  #interests .section-content-wrapper { text-align: right; }

  @media (max-width: 768px) {
    .scroll-section {
      min-height: auto;
      padding: 1.5rem 1.25rem;
    }

    .section-title {
      font-size: 1.75rem;
    }
  }
</style>
