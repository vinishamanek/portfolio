---
const sections = [
  {
    title: 'journalism',
    items: [
      {
        name: 'loving and fog lake, concert review',
        publication: 'The Concordian',
        url: 'https://theconcordian.com/2024/04/welcoming-spring-with-loving-and-fog-lake/',
      },
      {
        name: 'briston maroney, concert review',
        publication: 'The Concordian',
        url: 'https://theconcordian.com/2024/02/briston-maroney-charmed-the-crowd-at-montreals-club-soda/',
      },
    ]
  },
  {
    title: 'course work',
    items: [
      {
        name: 'vitalview, UI / UX project',
        url: 'https://vinishamanek.github.io/vitalview/',
      },
    ]
  },
];
  
---

<div class="etc-content">
  <div class="sections-container">
    {sections.map((section, sectionIndex) => (
      <section class="content-section">
        <h3 class="subsection-title">{section.title}</h3>
        <div class="items-list">
          {section.items.map((item, itemIndex) => (
            <div class="item-card">
              <h4>
                <a href={item.url} target="_blank" rel="noopener noreferrer">
                  {item.name}
                </a>
              </h4>
              {item.publication && <p class="publication">{item.publication}</p>}
            </div>
          ))}
        </div>
      </section>
    ))}
  </div>
</div>

<style>
  .etc-content {
    opacity: 1;
    transform: translateY(0);
    text-align: inherit;
  }

  .sections-container {
    display: flex;
    flex-direction: column;
    gap: 2.5rem;
  }

  .content-section {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
    opacity: 1;
    transform: translateY(0);
  }

  .subsection-title {
    display: none;
  }

  .items-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .item-card {
    padding: 0;
    opacity: 1;
    transform: translateX(0);
    text-align: inherit;
  }

  .item-card h4 {
    font-size: 1.15rem;
    margin: 0 0 0.25rem 0;
    font-weight: 500;
  }

  .item-card h4 a {
    color: #0f172a;
    transition: color 0.2s ease;
  }

  .item-card h4 a:hover {
    color: #1d4ed8;
    text-decoration: none;
  }

  .publication {
    font-size: 0.9rem;
    margin: 0;
    color: #334155;
    font-style: italic;
  }

  @media (max-width: 768px) {
    .sections-container {
      gap: 2rem;
    }

    .subsection-title {
      font-size: 1.35rem;
    }

    .item-card h4 {
      font-size: 1.05rem;
    }
  }
</style>