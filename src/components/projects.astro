---
const projects = [
  {
    name: 'coveo',
    description: 'software developer intern, knowledge core R&D team',
    url: 'https://github.com/coveo/ui-kit',
    date: 'may 2024 - august 2024'
  },
  {
    name: 'vinimap',
    description: 'concordia campus navigation mobile app - mini capstone project, 1st place winner',
    url: 'https://github.com/mahutt/ViniMap',
    date: 'january 2025 - april 2025'
  },
  {
    name: 'prezpal',
    description: 'voice-controlled presentation editor with hands-free slide creation - conuhacks ix, 1st place winner',
    url: 'https://devpost.com/software/prezpal-36079w',
    date: 'february 2025'
  },
  {
    name: 'duomove',
    description: 'ai-powered motion-sensing game using raspberry pi and real-time pose estimation - hackthehill, 2nd place winner',
    url: 'https://devpost.com/software/duo-move',
    date: 'september 2024'
  },
];
---

<div class="projects-content">
  <div class="projects-list">
    {projects.map((project, index) => {
      const parts = project.description.split(' - ');
      const mainText = parts[0];
      const subText = parts[1] || '';
      
      return (
        <div class="project-card">
          <div class="project-header">
            <h3>
              <a href={project.url} target="_blank" rel="noopener noreferrer">
                {project.name}
              </a>
            </h3>
            <p class="date">{project.date}</p>
          </div>
          <p class="description">
            {mainText}
            {subText && <span class="sub-description">{subText}</span>}
          </p>
        </div>
      );
    })}
  </div>
</div>

<style>
  .projects-content {
    opacity: 1;
    transform: translateY(0);
  }

  .projects-list {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .project-card {
    padding: 0;
    opacity: 1;
    transform: translateX(0);
  }

  .project-header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    gap: 1rem;
    margin-bottom: 0.5rem;
  }

  .project-card h3 {
    font-size: 1.35rem;
    margin: 0;
  }

  .project-card h3 a {
    color: #0f172a;
    transition: color 0.2s ease;
  }

  .project-card h3 a:hover {
    color: #1d4ed8;
    text-decoration: none;
  }

  .date {
    font-size: 0.95rem;
    color: #334155;
    margin: 0;
    white-space: nowrap;
  }

  .description {
    font-size: 1rem;
    margin: 0;
    color: #1f2937;
    line-height: 1.6;
  }

  .sub-description {
    display: block;
    color: #6b7280;
    font-style: italic;
    margin-top: 0.25rem;
  }

  @media (max-width: 768px) {
    .projects-list {
      gap: 1.75rem;
    }

    .project-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.25rem;
    }

    .project-card h3 {
      font-size: 1.2rem;
    }

    .description {
      font-size: 0.95rem;
    }
  }
</style>